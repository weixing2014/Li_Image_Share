<%= simple_form_for image do |f| %>
  <%= f.input :url unless %w(edit update).include?(params[:action]) %>
  <%= f.input :tag_list, label: 'Tags',
    input_html: { value: image.tag_list.join(', ') } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
<% end %>
