<div class="col-sm-4">
  <div class="card">
    <div class="image-container">
      <%= link_to image_tag(image.url, class: 'image-container__image card-img-top'), image_path(image), class: 'js-image-show'%>
    </div>
    <div class="card-block">
      <%= render partial: 'tag_link', collection: image.tag_list %>
    </div>
    <div class="card-block">
      <%= render partial: 'share_image_button', locals: { image_id: image.id } %>
    </div>
  </div>
</div>
