<div class="modal fade" id="shareImageModal" tabindex="-1" role="dialog" aria-labelledby="shareImageModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="shareImageModalLabel">Share Image</h4>
      </div>
      <div class="modal-body">
        <div class="image-container">
          <%= image_tag nil, class:'image-container__preview',
            id: 'js-share-image-preview' %>
        </div>

        <hr>

        <%= form_tag share_image_path, id: 'js-share-image-form' do %>
          <%= text_field_tag 'js-image-id', nil, type: 'hidden' %>
          <div class="form-group">
            <%= label_tag 'js-image-recipient', 'Recipient:', class: 'control-label' %>
            <%= text_field_tag 'js-image-recipient', nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag 'js-email-subject', 'Subject:', class: 'control-label' %>
            <%= text_field_tag 'js-email-subject', nil, class: 'form-control' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="js-send-image">Send</button>
      </div>
    </div>
  </div>
</div>
