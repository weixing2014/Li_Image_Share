<div class="js-share-image-modal modal fade" tabindex="-1" role="dialog" aria-labelledby="shareImageModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="shareImageModalLabel">Share Image</h4>
      </div>
      <div class="modal-body">
        <div class="image-container">
          <%= image_tag nil, class:'js-share-image-preview image-container__preview' %>
        </div>

        <hr>

        <%= form_tag share_image_path, class: 'js-share-image-form' do %>
          <%= text_field_tag 'image_id', nil, class: 'js-image-id', type: 'hidden' %>
          <div class="form-group">
            <%= label_tag 'image_recipient', 'Recipient:', class: 'control-label' %>
            <%= text_field_tag 'image_recipient', nil, class: 'js-image-recipient form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag 'email_subject', 'Subject:', class: 'control-label' %>
            <%= text_field_tag 'email_subject', nil, class: 'js-email-subject form-control' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="js-send-image btn btn-primary">Send</button>
      </div>
    </div>
  </div>
</div>
